<mvc:View
        controllerName="rusagro.elevator.admin.controller.User"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m">
    <Page
            title="{i18n>user.page.title}">
        <Table id="UserList"
               inset="false"
               mode="None"
               items="{
			       path: '/AuthUserSet'
		       }" >
            <headerToolbar>
                <Toolbar>
                    <Title text="{i18n>user.title}" level="H2" />
                    <ToolbarSpacer />
                    <Button
                            icon="sap-icon://add"
                            press=".handleCreateUserPress" />
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column width="12em">
                    <Text text="{i18n>user.name}" />
                </Column>
                <Column>
                    <Text text="{i18n>user.fullname}" />
                </Column>
                <Column >
                    <Text text="{i18n>user.sapuser}" />
                </Column>
                <Column >
                    <Text text="{i18n>user.password}" />
                </Column>
                <Column >
                    <Text text="{i18n>user.updateby}" />
                </Column>
                <Column>
                    <Text text="{i18n>user.updateat}" />
                </Column>
                <Column >
                </Column>
				 <Column>
				</Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ObjectIdentifier
                                title="{Name}"/>
                        <Text
                            text="{FullName}"/>
                        <Text
                                text="{SapUserId}"/>
                        <Text
                                text="{Password}"/>
                        <Text text="{
                                path: 'ChangeAt',
                                type: 'sap.ui.model.type.DateTime',
                                formatOptions: {
                                style: 'medium'
                                }
                            }" />
                        <Text text="{ChangeBy}" />
                        <Button
                                icon="sap-icon://edit"
                                press=".handleUpdateUserPress"/>
						 <Button
                                icon="sap-icon://delete"
                                press=".handleDeleteUserPress"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
